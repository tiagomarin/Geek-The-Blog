<div class="flex flex-col w-full gap-3">
  <%= render partial:'shared/user', locals: {user: @user} %>
  <div class="flex flex-col gap-3 w-full p-4 border border-black border-solid">
    <h3>Bio</h3>
    <p><%= @user.bio %></p>
  </div>
  <ul class="flex flex-col gap-3 w-full">
    <p class="only:block hidden">There are no posts yet!</p>
    <% @user.last_3_posts.each do |post| %>
      <%= link_to user_post_path(@user, post.id) do %>
        <%= render partial:'shared/post_highlight', locals: {user: @user, post: post} %>
      <% end %>
    <% end %>
  </ul>
  <button>Show all posts</button>
</div>