<div class="flex flex-col gap-3">
  <div class="flex flex-col p-4 border border-black border-solid">
    <h3>Post <%= @post.id %> by <%= @post.author.name %></h3>
    <h3><%= @post.title %></h3>
    <p><%= @post.text %></p>
    <span class="text-right">comments: <%= @post.comments.length %>, likes: <%= @post.likes.length %> </span>
  </div>
  <div class="self-end"><%= render partial: 'shared/like_btn'%></div>
  <%= render partial: 'shared/post_comments', locals: { comments: @post.comments, post_id: @post.id} %>
  <%= render "shared/add_comment" %>
</div>